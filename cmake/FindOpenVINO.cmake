SET(CLCRASH_OPENVINO_RUNTIME_PATH "" CACHE STRING "Path to OpenVINO build root.")

if(CLCRASH_OPENVINO_RUNTIME_PATH)
	message("Using OpenVINO root path from cache. Path: ${CLCRASH_OPENVINO_RUNTIME_PATH}")
	set(OPEN_VINO_RUNTIME_PATH ${CLCRASH_OPENVINO_RUNTIME_PATH})
elseif(DEFINED ENV{CLCRASH_OPENVINO_RUNTIME_PATH})
	message("Using OpenVINO root path from env var. Path: $ENV{CLCRASH_OPENVINO_RUNTIME_PATH}")
	set(OPEN_VINO_RUNTIME_PATH $ENV{CLCRASH_OPENVINO_RUNTIME_PATH})
elseif(NOT OpenVINO_FOUND)
	find_package(OpenVINO CONFIG QUIET)
	cmake_path(GET OpenVINO_DIR PARENT_PATH OPEN_VINO_RUNTIME_PATH)
endif()

if (OPEN_VINO_RUNTIME_PATH)
	message("Looking for OpenVINO in: ${OPEN_VINO_RUNTIME_PATH}")
	find_package( OpenVINO PATHS "${OPEN_VINO_RUNTIME_PATH}/cmake" )
endif()
